            </div>
            <div class="form-group">
                <label asp-for="ItemId" class="control-label" hidden></label>
                <input asp-for="ItemId" class="form-control" type="hidden"/>
                <span asp-validation-for="ItemId" class="text-danger" hidden></span>
            </div>
            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ItemPrice" class="control-label" hidden></label>
                <input asp-for="ItemPrice" class="form-control" type="hidden"/>
                <span asp-validation-for="ItemPrice" class="text-danger" hidden></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
